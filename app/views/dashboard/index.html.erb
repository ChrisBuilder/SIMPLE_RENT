<div class = "container">
  <div class = "welcome-header">
    <p class = "welcome">Welcome <%= @user.first_name %></p><br><p>have a quick look at your activities!</p>
  </div>

  <div class = "row">
    <div class = "column">
      <div class = "card">
        <h3><%= Date.today.strftime("%A, %B %e, %Y") %></h3>
        <hr>
        <% booking_count = @user.bookings.count %>
        <% if booking_count > 1 %>
          <p>You have made <%= booking_count %> bookings so far!</p>
        <% elsif%>
          <p>You have made only <%= booking_count %> booking so far!</p>
        <% else %>
          <p>You have made no bookings yet</p>
        <% end %>

      </div>
    </div>
    <div class = "column">
      <div class = "card">
        <h3>Total Revenue</h3>
        <hr>
        <p>$0</p>
      </div>
    </div>

    <div class = "column">
      <div class = "card">
        <h3>Your Shops</h3>
        <hr>
        <% shop_count = @user.shops.count %>
        <% if shop_count > 1 %>
          <p>You have </p><%= shop_count %> shops on our platform!
        <% else %>
          <p>You have no shops here yet!</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class = "row-main">
    <div class = "column-main">
      <div class = "card-main">
        <div class="row justify-content-center">
          <% if @next_booking %>
             <h3 class="innertxt">
                <h3 class = "text-center">Your upcoming rental</h3>
                <hr>
                <p>Booking Number</p>: <%= @next_booking.id %></h3>
                <p>Renting: <%= @next_booking.unit.title %></p>
                <p>From: <%= @next_booking.start_date.strftime("%A, %B %e, %Y") %></p>
                <p>To: <%= @next_booking.end_date.strftime("%A, %B %e, %Y") %></p>
              </div>
            <% end %>
        </div>
      </div>


      <div class = "column-main">
        <div class = "card-main">
          <h3>Past Bookings</h3>
          <hr>
          <% @bookings.each do |booking| %>
            <h3> <%= booking.unit.title %></h3>
            <p> Period:<%= booking.start_date.strftime("%A, %B %e, %Y") %> until <%= booking.end_date.strftime("%A, %B %e, %Y") %></p>
            <p>Price: <%= booking.unit.price %></p>
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

 <!-- Button trigger modal -->
  <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Start your shop
    </button>
  </div>

