

<div class="container mt-4 position-relative">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="welcome">
        <h1 class="text-center mb-4 py-3">Welcome, Renter and potential business owner</h1>
      </div>
    </div>
  </div>


  <!-- Button trigger modal -->
  <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Start your shop
    </button>
  </div>


  <div>
    <div class="row justify-content-center">
     <div class="col-md-6">
      <div class="container mt-4">
        <div class="row justify-content-center">
          <% if @next_booking %>
            <div class="innertxt">
            <h3 class="text-center">Your upcoming rental <i class="fa-solid fa-ship fa-beat"></i></h3>
                <p>Booking Number: <%= @next_booking.id %></p>
                <p>Renting: <%= @next_booking.unit.title %></p>
                <p>Date: <%= @next_booking.start_date %></p>
                <p>Until: <%= @next_booking.end_date %></p>
                </div>
              </div>
            </div>
          <% else %>
            <p class="text-center">You have no upcoming bookings</p>
          <% end %>
        </div>
      </div>
  </div>



  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h4 class="modal-title w-100 font-weight-bold">Create Your Shop</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for(@shop, html: { class: 'mt-4' }) do |modal_form| %>
            <%= modal_form.input :title, label: 'Title' %>
            <%= modal_form.input :description, label: 'Description' %>
            <%= modal_form.input :photo, as: :file, label: 'Photo' %>
            <%= modal_form.submit 'Submit', class: 'button mt-3' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
