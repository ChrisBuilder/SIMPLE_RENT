<div class="container h-100">
  <div class="row m-3">

    <% if @shops.any? %>
      <% shop = @shops.first %>
      <h2>Hello <%= shop.user.first_name %>,</h2> <br>
      <p>Here are all the shops you have on our platform!</p>
    <% else %>
      <h2>No shops added yet</h2>
    <% end %>
    <hr>
  </div>

  <div class="row justify-content-center">
    <% if @shops.any? %>
      <% @shops.each do |shop| %>
        <div class="col-12 col-md-5 m-2">
          <%= link_to shop_path(shop), class: "text-decoration-none" do %>
            <div class="card text-start p-3">
              <h3><%= shop.title %></h3>
              <small>Opened <%= time_ago_in_words(shop.created_at, include_seconds: false, locale: 'en', scope: 'datetime.distance_in_words') %> ago.</small>
              <hr>
              <p>Shop has <%= shop.units.count %> units.</p>
              <p><%= shop.description %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <h3>You do not have any shops yet!</h3>
    <% end %>

    <div class="col-12 col-md-5 m-2">
      <%= link_to new_shop_path do %>
        <div class="card-add">
          <i class="fa-solid fa-circle-plus fa-2xl"></i>
        </div>
      <% end %>
    </div>
  </div>
</div>
