<div class = "container">
  <h4 class = "text-center">Add a unit to your shop</h4>
  <div class = "row">
    <%= simple_form_for([@shop, @unit]) do |f| %>
  <% if @unit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@unit.errors.count, "error") %> prevented this unit from being saved:</h2>

      <ul>
        <% @unit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :title %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :available, as: :boolean %>
  <%= f.input :photo, as: :file %>
  <div class="actions">
    <%= link_to "<< Back", "/shops/#{@shop.id}", class: "btn-flat" %>
    <%= f.submit class: "btn-flat" %>
  </div>
<% end %>
  </div>
  <!--<%= link_to "Back to your shop: #{@shop.title}", "/shops/#{@shop.id}" %> -->

</div>
