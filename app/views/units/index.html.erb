<div  class = "container">
  <h1 class = "header-text">Units to choose from</h1>
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
  <% end %>

  <div class = "row">
    <% @units.each do |unit| %>
      <div class = "column">
        <div class = "card">
          <h6><%= unit.title %></h6>
          <p> Description:
            <%= unit.description%>
            </p>
          <p>Price <%= unit.price %></p>
          <%= cl_image_tag(unit.photo.key, width: 300, height: 300, crop: :fill) %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Dashboard", dashboard_path, class: "btn-flat btn-dashboard"%>
</div>
