<head>
  <%= stylesheet_link_tag 'styles' %>
  <link href="https://fonts.googleapis.com/css2?family=Rammetto+One&display=swap" rel="stylesheet">
</head>

<div class="unit-card">
  <h1>Unit Details</h1>
  <div class="unit-details">
    <h2><%= @unit.title %></h2>
    <p>Description: <%= @unit.description %></p>
    <div id="shopcard">
      <%= link_to "Back to Shop", shop_units_path(@unit.shop) %>
      <%= link_to @shop.title, shop_units_path(@unit.shop) %>
      <%= link_to "Book now", new_shop_unit_booking_path(@unit.shop, @unit) %>
    </div>
  </div>
</div>

<div class="review-form">
  <h2>Add Review</h2>
  <%= form_for [@unit, Review.new] do |f| %>
    <%= f.text_area :content, placeholder: 'Write your review...' %>
    <%= f.number_field :rating, placeholder: 'Rating (1-5)' %>
    <%= f.submit 'Submit Review' %>
  <% end %>
</div>

<%= link_to "Back to Units", units_path %>